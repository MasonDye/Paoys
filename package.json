{
  "name": "paoys-desktop",
  "version": "0.1.0",
  "description": "Paoys desktop companion for Windows",
  "productName": "Paoys",
  "main": "src/main.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.paoys.desktop",
    "productName": "Paoys",
    "files": [
      "src/**",
      "assets/**",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/tray.ico"
    }
  }
}
